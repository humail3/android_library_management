<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:padding="20dp"
    tools:context=".ViewReportsScreen">

    <TextView
        android:id="@+id/TV_current"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:fontFamily="serif"
        android:text="Current Library Status"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/TV_new_book_req"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TV_current"
        android:layout_marginTop="30dp"
        android:fontFamily="serif"
        android:text="Issued Books"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/TV_view_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TV_new_book_req"
        android:layout_marginTop="30dp"
        android:fontFamily="serif"
        android:text="Returned Books"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/TV_view_reports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TV_view_status"
        android:layout_marginTop="30dp"
        android:fontFamily="serif"
        android:text="Overdue"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/TV_lost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TV_view_reports"
        android:layout_marginTop="30dp"
        android:fontFamily="serif"
        android:text="Lost"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/TV_lost_cleared"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TV_lost"
        android:layout_marginTop="30dp"
        android:fontFamily="serif"
        android:text="Lost Cleared"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/black" />


    <TextView
        android:id="@+id/TV_no_of_new_book_req"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/TV_current"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:fontFamily="serif"
        android:text="23"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/TV_no_of_view_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TV_no_of_new_book_req"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:fontFamily="serif"
        android:text="10"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/TV_no_of_view_reports"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TV_no_of_view_status"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:fontFamily="serif"
        android:text="4"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/TV_no_of_lost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TV_no_of_view_reports"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:fontFamily="serif"
        android:text="3"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/TV_no_of_lost_cleared"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/TV_no_of_lost"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:fontFamily="serif"
        android:text="2"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/black" />


</RelativeLayout>